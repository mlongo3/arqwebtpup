		<div class="admin-container" ng-app="Usuario">
			<div class="col-md-12" ng-controller="usuarioByIdCtrl as ctrl">
				<div class="panel panel-profile" ng-init="init()">
					<div class="panel-body">
						<h1 class="title-admin pull-left">Cargar usuario</h1>
						<a href="/listausuarios" class="btn btn-lightblue pull-right m-t-0" data-modal="confirmarSalir"><i class="icon-arrow-thin-left"></i> Volver al listado</a>

						<div class="clearfix"></div>

						<form name="crearUsuarioForm" class="form-default">
							<div class="row clearfix">
								<div class="col-md-12">
									<h3>Información personal</h3>
								</div>

								<div class="col-md-4">
									<label for="nombre">Nombre</label>
									<input type="text" name="nombre" ng-model="user.nombre" id="nombre">
								</div>

								<div class="col-md-4">
									<label for="apellido">Apellido</label>
									<input type="text" ng-model="user.apellido">
								</div>

								<div class="col-md-4">
									<label for="apellido">Password</label>
									<input type="password" ng-model="user.password">
								</div>
								
								<div class="col-md-4">
									<label for="apellido">Repetir password</label>
									<input type="password" ng-model="user.repassword">
								</div>							

								<div class="col-md-12">
									<h3>Datos de contacto</h3>
								</div>

								<div class="col-md-4">
									<label for="email">Email</label>
									<input type="mail" name="email" id="email" ng-model="user.email">
								</div>

								<div class="col-md-4">
									<label for="telefono">Teléfono</label>
									<input type="number" name="telefono" id="telefono" ng-model="user.telefono">
								</div>
								
								<div class="col-md-4">
									<label for="celular">Celular</label>
									<input type="number" name="celular" id="celular" ng-model="user.celular">
								</div>
								
								<div class="col-md-12">
									<h3>Datos del domicilio</h3>
								</div>

								<div class="col-md-4">
									<label for="domicilio">Domicilio</label>
									<input type="text" name="domicilio" id="domicilio" ng-model="user.dcalle">
								</div>
								
								<div class="col-md-4">
									<label for="numero">Número</label>
									<input type="number" name="numero" id="numero" ng-model="user.dnumero">
								</div>
								
								<div class="col-md-4">
									<label for="Piso">Piso</label>
									<input type="text" name="Piso" id="Piso" ng-model="user.dpiso">
								</div>
								
								<div class="col-md-4">
									<label for="departamento">Departamento</label>
									<input type="text" name="departamento" id="departamento" ng-model="user.ddepartamento">
								</div>
								
								<div class="col-md-4">
									<label for="codigoPostal">Código postal</label>
									<input type="text" name="codigoPostal" id="codigoPostal" ng-model="user.dcodigopostal">
								</div>

								<div class="col-md-12" ng-show="rol == 'admin'">
									<h3>Datos administrativos</h3>
								</div>

								<div class="col-md-4" ng-show="rol == 'admin'">
									<label for="manager">Manager</label>
									<select class="select2-basic" name="manager" id="manager" ng-model="user.user"
									ng-options="user._id as user.nombre + ' ' +  user.apellido for user in managers | filter : {'_id' :  '!' + idSearch}" >
										<option value="" selected disabled>Seleccioná un manager</option>
									</select>
								</div>


								<div class="col-md-4 col-md-offset-8">
									<button class="btn btn-xl btn-full btn-lightblue text-left m-t-20" 
									ng-disabled="crearUsuarioForm.$invalid"
                                    ng-click="saveOrUpdate()" data-modal="exito">Guardar cambios <i class="icon-arrow-thin-right pull-right"></i></button>
								</div>
							</div>
						</form>
					</div>
				</div>
